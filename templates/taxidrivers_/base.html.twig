{% if app.request.locale == 'es' %}
    {% set lang = 'es' %}
{% else %}
    {% set lang = 'en' %}
{% endif %}
<!DOCTYPE html>
{% apply spaceless %}
<html lang="{{ app.request.locale }}">
    <head>
        {{ include("taxidrivers_/global/_meta.html.twig") }}

        {% block meta %}{% endblock %}

        <title>{% block title %}Welcome!{% endblock %} ~ TaxidriversCorp</title>

        {{ encore_entry_link_tags('taxiDriversApp') }}
        {{ encore_entry_link_tags('taxiDriversAppNoCritical') }}
        {% block stylesheets %}{% endblock %}

        {# Lazzy load for CSS as inline script #}
        {{ include('utils/loadCssScript.twig') }}

    </head>
    <body>

        {{ include("taxidrivers_/global/_header.html.twig") }}

        {% block body %}
        {% endblock %}

        {{ include("taxidrivers_/global/_footer.html.twig") }}

        {{ encore_entry_script_tags('taxiDriversApp') }}
        {{ encore_entry_script_tags('taxiDriversAppNoCritical') }}

        {% block javascripts %}{% endblock %}
    </body>
</html>
{% endapply %}
